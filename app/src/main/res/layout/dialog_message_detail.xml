<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="24dp"
	android:paddingRight="24dp"
	android:paddingTop="8dp"
	android:paddingBottom="8dp">

	<TextView
		android:id="@+id/created_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/state_dialog_created"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/created_date"
		app:layout_constrainedWidth="true"
		app:layout_constraintHorizontal_bias="0"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		/>

	<TextView
		android:id="@+id/created_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12.4.2019 12:49"
		app:layout_constraintBaseline_toBaselineOf="@id/created_text"
		app:layout_constraintRight_toRightOf="parent"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		/>

	<TextView
		android:id="@+id/posted_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/state_dialog_posted"
		android:layout_marginTop="4dp"
		app:layout_constraintTop_toBottomOf="@id/created_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/posted_date"
		app:layout_constrainedWidth="true"
		app:layout_constraintHorizontal_bias="0"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/posted_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12.4.2019 12:49"
		app:layout_constraintBaseline_toBaselineOf="@id/posted_text"
		app:layout_constraintRight_toRightOf="parent"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/modified_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/state_read"
		android:layout_marginTop="4dp"
		app:layout_constraintTop_toBottomOf="@id/posted_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/modified_date"
		app:layout_constrainedWidth="true"
		app:layout_constraintHorizontal_bias="0"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/modified_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12.4.2019 12:49"
		app:layout_constraintBaseline_toBaselineOf="@id/modified_text"
		app:layout_constraintRight_toRightOf="parent"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/messageid_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/message_id"
		android:layout_marginTop="4dp"
		app:layout_constraintTop_toBottomOf="@id/modified_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/messageid_date"
		app:layout_constrainedWidth="true"
		app:layout_constraintHorizontal_bias="0"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/messageid_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="12.4.2019 12:49"
		app:layout_constraintBaseline_toBaselineOf="@id/messageid_text"
		app:layout_constraintRight_toRightOf="parent"
		android:enabled="true"
		android:textIsSelectable="true"
		android:focusable="true"
		android:longClickable="true"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/filetype_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/mime_type"
		android:layout_marginTop="4dp"
		app:layout_constraintTop_toBottomOf="@id/messageid_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/filetype_mime"
		app:layout_constrainedWidth="true"
		app:layout_constraintHorizontal_bias="0"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/filetype_mime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="video/mp4"
		app:layout_constraintBaseline_toBaselineOf="@id/filetype_text"
		app:layout_constraintRight_toRightOf="parent"
		android:textAppearance="@style/Threema.AlertDialog.BodyTextStyle"
		android:visibility="gone"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>
