<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
			  android:layout_height="72dp"
			  android:background="@drawable/listitem_background_selector"
			  android:orientation="vertical"
			  android:paddingLeft="@dimen/listitem_standard_margin_left_right"
			  android:paddingRight="@dimen/listitem_standard_margin_left_right"
			  tools:context=".filepicker.FilePickerActivity">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<ImageView
				android:id="@android:id/icon"
				android:layout_width="24dp"
				android:layout_height="72dp"
				android:layout_marginRight="4dp"
				android:scaleType="centerInside"
				android:contentDescription="@string/app_name"
				android:tint="?attr/textColorSecondary"
				android:src="@drawable/ic_folder"/>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:layout_gravity="center_vertical"
				android:orientation="vertical">

			<TextView
					android:id="@+id/name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:ellipsize="middle"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="?android:attr/textColorPrimary"
					android:text="File name"
					android:singleLine="true">
			</TextView>

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">

				<TextView
						android:id="@+id/date"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_alignWithParentIfMissing="true"
						android:minWidth="72dp"
						android:ellipsize="end"
						android:singleLine="true"
						android:text="Date"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="?android:attr/textColorSecondary">
				</TextView>

				<TextView
						android:id="@+id/size"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@id/date"
						android:layout_toLeftOf="@+id/extra"
						android:layout_marginLeft="5dp"
						android:singleLine="true"
						android:text="Size"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="?android:attr/textColorSecondary">
				</TextView>

				<TextView
						android:id="@+id/extra"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="5dp"
						android:singleLine="true"
						android:visibility="gone"
						android:text="ID"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="?android:attr/textColorSecondary">
				</TextView>

			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
