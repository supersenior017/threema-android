<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:gravity="top|right" android:top="10dp" android:left="0dp">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/tooltip_border_radius"/>
			<solid android:color="@color/tooltip_shadow_color"/>
		</shape>
	</item>
	<item android:gravity="top|left" android:left="@dimen/tooltip_arrow_offset">
		<rotate
			android:fromDegrees="45"
			android:pivotX="0%"
			android:pivotY="0%"
			android:toDegrees="0">
			<shape android:shape="rectangle">
				<solid android:color="@color/tooltip_background_color"/>
				<size android:width="@dimen/tooltip_arrow_size" android:height="@dimen/tooltip_arrow_size"/>
			</shape>
		</rotate>
	</item>
	<item android:gravity="top|left" android:top="8dp" android:left="2dp" android:bottom="2dp">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/tooltip_border_radius"/>
			<solid android:color="@color/tooltip_background_color"/>
		</shape>
	</item>
</layer-list>
