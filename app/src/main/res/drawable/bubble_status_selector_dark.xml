<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<layer-list>
			<item
				android:bottom="@dimen/chat_bubble_offset_pos"
				android:right="@dimen/chat_bubble_offset_pos">
				<shape android:shape="rectangle">
					<corners android:radius="@dimen/chat_bubble_border_radius"/>
					<padding android:bottom="@dimen/chat_bubble_border_padding"
					         android:left="@dimen/chat_bubble_border_padding"
					         android:right="@dimen/chat_bubble_border_padding"
					         android:top="@dimen/chat_bubble_border_padding"/>
					<solid android:color="@color/bubble_pressed_dark"/>
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_activated="true">
		<layer-list>
			<item
				android:bottom="@dimen/chat_bubble_offset_pos"
				android:right="@dimen/chat_bubble_offset_pos">
				<shape android:shape="rectangle">
					<corners android:radius="@dimen/chat_bubble_border_radius"/>
					<padding android:bottom="@dimen/chat_bubble_border_padding"
					         android:left="@dimen/chat_bubble_border_padding"
					         android:right="@dimen/chat_bubble_border_padding"
					         android:top="@dimen/chat_bubble_border_padding"/>
					<solid android:color="@color/bubble_selected_dark"/>
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list>
			<item
				android:bottom="@dimen/chat_bubble_offset_pos"
				android:right="@dimen/chat_bubble_offset_pos">
				<shape android:shape="rectangle">
					<corners android:radius="@dimen/chat_bubble_border_radius"/>
					<padding android:bottom="@dimen/chat_bubble_border_padding"
					         android:left="@dimen/chat_bubble_border_padding"
					         android:right="@dimen/chat_bubble_border_padding"
					         android:top="@dimen/chat_bubble_border_padding"/>
					<solid android:color="@color/bubble_status_dark"/>
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
