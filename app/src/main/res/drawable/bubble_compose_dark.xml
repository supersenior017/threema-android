<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/edittext_bubble_border_radius"/>
			<solid android:color="@color/dark_compose_bubble"/>
		</shape>
	</item>
	<item
		android:bottom="@dimen/chat_bubble_offset_pos"
		android:left="@dimen/chat_bubble_offset_neg"
		android:right="@dimen/chat_bubble_offset_pos"
		android:top="@dimen/chat_bubble_offset_neg">
		<shape
			android:shape="rectangle">
			<corners android:radius="@dimen/edittext_bubble_border_radius"/>
			<padding
				android:bottom="@dimen/chat_bubble_border_padding"
				android:left="@dimen/chat_bubble_border_padding"
				android:right="@dimen/chat_bubble_border_padding"
				android:top="@dimen/chat_bubble_border_padding"/>
			<solid android:color="@color/dark_toolbar_color"/>
			<stroke android:color="@color/dark_compose_bubble" android:width="0.5dp" />
		</shape>
	</item>
</layer-list>


