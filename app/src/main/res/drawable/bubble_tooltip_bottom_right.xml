<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:gravity="bottom|right" android:bottom="8dp" android:top="2dp" android:right="0dp" android:left="2dp">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/tooltip_border_radius"/>
			<solid android:color="@color/tooltip_shadow_color"/>
		</shape>
	</item>
	<item android:gravity="bottom|right" android:right="24dp">
		<rotate
			android:fromDegrees="-45"
			android:pivotX="0%"
			android:pivotY="0%"
			android:toDegrees="0">
			<shape android:shape="rectangle">
				<solid android:color="@color/tooltip_background_color"/>
				<size android:width="12dp" android:height="12dp"/>
			</shape>
		</rotate>
	</item>
	<item android:gravity="bottom|right" android:bottom="10dp" android:right="2dp">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/tooltip_border_radius"/>
			<solid android:color="@color/tooltip_background_color"/>
		</shape>
	</item>
</layer-list>
