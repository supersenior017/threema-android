<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/edittext_bubble_shadow_radius"/>
			<solid android:color="@color/compose_shadow_light"/>
		</shape>
	</item>
	<item
		android:bottom="1.2dp"
		android:right="1.2dp">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/edittext_bubble_border_radius"/>
			<solid android:color="@color/compose_bubble_light"/>
		</shape>
	</item>
	<item
		android:bottom="2dp"
		android:right="2dp">
		<shape
			android:shape="rectangle">
			<corners android:radius="@dimen/edittext_bubble_border_radius"/>
			<padding
				android:bottom="@dimen/chat_bubble_border_padding"
				android:left="@dimen/chat_bubble_border_padding"
				android:right="@dimen/chat_bubble_border_padding"
				android:top="@dimen/chat_bubble_border_padding"/>
			<solid android:color="@android:color/white"/>
			<stroke android:color="@color/compose_stroke" android:width="0.5dp" />
		</shape>
	</item>
</layer-list>
